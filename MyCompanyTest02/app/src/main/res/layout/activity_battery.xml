<?xml version="1.0" encoding="utf-8"?>
<LinearLayout
        xmlns:android="http://schemas.android.com/apk/res/android"
        xmlns:tools="http://schemas.android.com/tools"
        xmlns:app="http://schemas.android.com/apk/res-auto"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        tools:context=".BatteryActivity"
        android:orientation="vertical">

    <android.support.v7.widget.Toolbar
            android:layout_width="match_parent"
            android:layout_height="?attr/actionBarSize"
            android:id="@+id/toolbar"
            android:background="@color/colorPrimary"
            android:theme="@style/Base.ThemeOverlay.AppCompat.Dark.ActionBar"
            app:popupTheme="@style/Base.ThemeOverlay.AppCompat.Light"
            app:layout_scrollFlags="scroll|enterAlways|snap">

        <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:orientation="vertical">

            <TextView
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:text="电池信息"
                    android:textSize="18sp"
                    android:id="@+id/textpath"
                    android:textColor="#fff"
                    android:gravity="center_horizontal"/>

        </LinearLayout>
    </android.support.v7.widget.Toolbar>

    <TextView
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:id="@+id/textview_battery"
            android:text="已发现设备：8"
            android:layout_gravity="center"
            android:gravity="center"/>
    <TextView
            android:layout_width="match_parent"
            android:layout_height="wrap_content"

            android:text="(触摸图标，相关设备发光)"
            android:layout_gravity="center"
            android:gravity="center"/>

    <RelativeLayout

            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_gravity="center"
            android:gravity="center">


        <ImageView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:id="@+id/image_view_battery1"
                android:background="@drawable/battery01"
                android:layout_margin="10dp"/>
        <ImageView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_margin="10dp"
                android:id="@+id/image_view_battery2"
                android:background="@drawable/battery02"
                android:layout_toRightOf="@+id/image_view_battery1"/>
        <ImageView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_margin="10dp"
                android:id="@+id/image_view_battery3"
                android:background="@drawable/battery03"
                android:layout_toRightOf="@+id/image_view_battery2"/>
        <ImageView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_margin="10dp"
                android:id="@+id/image_view_battery4"
                android:layout_below="@+id/image_view_battery1"

                android:background="@drawable/battery04"/>
        <ImageView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_margin="10dp"
                android:id="@+id/image_view_battery5"
                android:background="@drawable/battery05"
                android:layout_below="@+id/image_view_battery2"
                android:layout_toRightOf="@+id/image_view_battery4"/>
        <ImageView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_margin="10dp"
                android:id="@+id/image_view_battery6"
                android:background="@drawable/battery05"
                android:layout_below="@+id/image_view_battery3"
               android:layout_toRightOf="@id/image_view_battery5"/>
        <ImageView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_margin="10dp"
                android:id="@+id/image_view_battery7"
                android:background="@drawable/battery05"
                android:layout_below="@+id/image_view_battery4"
               />
        <ImageView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_margin="10dp"
                android:id="@+id/image_view_battery8"
                android:background="@drawable/battery05"
                android:layout_below="@+id/image_view_battery5"
                android:layout_toRightOf="@id/image_view_battery7"/>

    </RelativeLayout>

</LinearLayout>