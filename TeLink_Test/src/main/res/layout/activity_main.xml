<?xml version="1.0" encoding="utf-8"?>
<LinearLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools" android:id="@+id/activity_main"
    android:layout_width="match_parent" android:layout_height="wrap_content"
    android:orientation="vertical"
    tools:context="com.tset.telink_ble.MainActivity"
    android:visibility="visible">

    <Button
        android:text="Scan"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:id="@+id/button_scan"
        android:layout_weight="1" />

    <TextView
        android:layout_width="match_parent" android:layout_height="67dp"
        android:id="@+id/StateView"
        android:background="@color/RecvBg"
        />

    <TextView
        android:layout_width="wrap_content" android:layout_height="wrap_content"
        android:id="@+id/title1"
        android:text="recv:" />

    <TextView
        android:layout_width="match_parent" android:layout_height="251dp"
        android:id="@+id/RevTextView"
        android:scrollbars="vertical"
        android:maxLines="20"
        android:background="@color/RecvBg"
        android:lines="20"
        android:text="" />

    <TextView
        android:layout_width="wrap_content" android:layout_height="wrap_content"
        android:id="@+id/title2"
        android:text="Send:" />

    <LinearLayout
        android:focusable="true" android:focusableInTouchMode="true"
        android:layout_width="0px" android:layout_height="0px"/>

    <EditText
        android:layout_width="match_parent"
        android:layout_height="32dp"
        android:id="@+id/EditSend"
        android:gravity="top|left"
        android:focusable="true"
        android:focusableInTouchMode="true"
        android:background="@color/RecvBg"
        />

    <Button
        android:text="Send"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_gravity="right"
        android:id="@+id/button_send"
        android:layout_weight="1" />


</LinearLayout>
